{
    "manifest_version": 3,
    "name": "CF Streak Tracker",
    "version": "0.0.1",
    "description": "Tracks Codeforces daily problem-solving streak",
    "permissions": ["storage", "alarms"],
    "host_permissions": ["https://codeforces.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://codeforces.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/on.svg",
        "48": "icons/on.svg",
        "128": "icons/on.svg"
    },
    "web_accessible_resources": [
        {
            "resources": ["icons/on.svg", "icons/off.svg"],
            "matches": ["<all_urls>"]
        }
    ]
}
